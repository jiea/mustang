<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jiea.mustang.dao.MenuMapper">
    <resultMap id="BaseResultMap" type="com.jiea.mustang.entity.Menu">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name_en" property="nameEn" jdbcType="VARCHAR"/>
        <result column="name_zh" property="nameZh" jdbcType="VARCHAR"/>
        <result column="menu_url" property="menuUrl" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="INTEGER"/>
        <result column="menu_icon" property="menuIcon" jdbcType="VARCHAR"/>
        <result column="menu_sort" property="menuSort" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="creator" property="creator" jdbcType="INTEGER"/>
        <result column="operate_time" property="operateTime" jdbcType="TIMESTAMP"/>
        <result column="operator" property="operator" jdbcType="INTEGER"/>
        <result column="memo" property="memo" jdbcType="VARCHAR"/>
    </resultMap>

    <!--根据主键删除菜单-->
    <delete id="deleteMenu" parameterType="int">
      DELETE FROM t_menu WHERE id = #{id}
    </delete>

    <!--验证英文名称是否存在-->
    <select id="verifyNameEn" resultType="_int">
      SELECT COUNT(1) FROM t_menu WHERE name_en = #{nameEn} AND id != #{id}
    </select>

    <!--验证中文名称是否存在-->
    <select id="verifyNameZh" resultType="_int">
      SELECT COUNT(1) FROM t_menu WHERE name_zh = #{nameZh} AND id != #{id}
    </select>

    <!--根据主键查询菜单-->
    <select id="getMenuById" parameterType="int" resultType="menu">
      SELECT
	    id, parent_id, name_en, name_zh, menu_url, menu_icon, menu_sort, memo
	  FROM
	    t_menu m
	  WHERE id = #{id}
    </select>

    <!--查询所有菜单-->
    <select id="selectAllMenu" resultType="menu">
      SELECT
	    id, parent_id, name_en, name_zh, menu_url, menu_icon, menu_sort, memo
	  FROM
	    t_menu m
	  ORDER BY m.menu_sort
    </select>

    <!-- 通过父id查询菜单 -->
    <select id="findMenuByParentId" resultType="Menu">
        SELECT id, name_zh, menu_icon FROM t_menu WHERE id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <!-- 通过用户主键查询菜单 -->
    <select id="findMenuByEmpId" parameterType="integer" resultType="Menu">
  	SELECT 
	  m.id,
	  m.name_en,
	  m.name_zh,
	  m.menu_url,
	  m.parent_id,
	  m.menu_icon
	FROM
	  t_emp_role ur 
	  JOIN t_menu_role mr 
	    ON ur.role_id = mr.role_id 
	  JOIN t_menu m 
	    ON mr.menu_id = m.id 
	    WHERE ur.emp_id = #{empId}
	  ORDER BY m.menu_sort
    </select>
    <insert id="insert" parameterType="menu">
        insert into t_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="nameEn != null">
                name_en,
            </if>
            <if test="nameZh != null">
                name_zh,
            </if>
            <if test="menuUrl != null">
                menu_url,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="menuIcon != null">
                menu_icon,
            </if>
            <if test="menuSort != null">
                menu_sort,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="creator != null">
                creator,
            </if>
            <if test="operateTime != null">
                operate_time,
            </if>
            <if test="operator != null">
                operator,
            </if>
            <if test="memo != null">
                memo,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="nameEn != null">
                #{nameEn,jdbcType=VARCHAR},
            </if>
            <if test="nameZh != null">
                #{nameZh,jdbcType=VARCHAR},
            </if>
            <if test="menuUrl != null">
                #{menuUrl,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                #{parentId,jdbcType=INTEGER},
            </if>
            <if test="menuIcon != null">
                #{menuIcon,jdbcType=VARCHAR},
            </if>
            <if test="menuSort != null">
                #{menuSort,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="creator != null">
                #{creator,jdbcType=INTEGER},
            </if>
            <if test="operateTime != null">
                #{operateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="operator != null">
                #{operator,jdbcType=INTEGER},
            </if>
            <if test="memo != null">
                #{memo,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateMenuById" parameterType="menu">
        update t_menu
        <set>
            <if test="nameEn != null">
                name_en = #{nameEn,jdbcType=VARCHAR},
            </if>
            <if test="nameZh != null">
                name_zh = #{nameZh,jdbcType=VARCHAR},
            </if>
            <if test="menuUrl != null">
                menu_url = #{menuUrl,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId,jdbcType=INTEGER},
            </if>
            <if test="menuIcon != null">
                menu_icon = #{menuIcon,jdbcType=VARCHAR},
            </if>
            <if test="menuSort != null">
                menu_sort = #{menuSort,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="creator != null">
                creator = #{creator,jdbcType=INTEGER},
            </if>
            <if test="operateTime != null">
                operate_time = #{operateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="operator != null">
                operator = #{operator,jdbcType=INTEGER},
            </if>
            <if test="memo != null">
                memo = #{memo,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- 指定数据库连接驱动jar -->
	<classPathEntry location="E:\maven\repository\mysql\mysql-connector-java\5.1.25\mysql-connector-java-5.1.25.jar" />
	<!-- 一个数据库指定一个context -->
	<context id="mustang" targetRuntime="MyBatis3">
		<commentGenerator>
			<!-- 是否去除自动生成的注释 -->
			<property name="suppressAllComments" value="true" />
			<!-- 是否生成注释带时间戳 -->
			<property name="suppressDate" value="true" />
		</commentGenerator>
		<!-- jdbc 连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/mustang_dev" userId="root"
			password="root" />

		<!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 生成实体类地址 -->
		<javaModelGenerator targetPackage="com.jiea.mustang.entity" targetProject="mustang" />
		<!-- 生成Mapper地址 -->
		<sqlMapGenerator targetPackage="com.jiea.mustang.mapper" targetProject="mustang" />
		<!-- 生成dao接口地址 -->
		<javaClientGenerator targetPackage="com.jiea.mustang.dao" targetProject="mustang" type="XMLMAPPER" />

		<!-- 配置表信息 -->
		<!-- schema数据库名 tableName表名 domainObjectName实体类名 enable*ByExample 是否生成 example类 -->
		<table schema="mustang_dev" tableName="t_role" domainObjectName="Role" enableCountByExample="false"
			enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false" />

		<table schema="mustang_dev" tableName="t_menu_role" domainObjectName="MenuRole" enableCountByExample="false"
			enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false" />
	</context>
</generatorConfiguration>